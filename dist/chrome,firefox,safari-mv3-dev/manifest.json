{
  "manifest_version": 3,
  "name": "Freshsky Notifications",
  "description": "A Web Extension that enhances Bluesky with notification features",
  "version": "1.0.0",
  "icons": {
    "16": "icon/16.png",
    "32": "icon/32.png",
    "48": "icon/48.png",
    "96": "icon/96.png",
    "128": "icon/128.png"
  },
  "permissions": [
    "notifications",
    "alarms",
    "tabs",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "*://bsky.app/*",
    "*://*.bsky.social/*",
    "http://localhost/*"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "assets/*",
        "icon/*"
      ],
      "matches": [
        "*://bsky.app/*",
        "*://*.bsky.social/*"
      ]
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "freshsky@extension.app"
    }
  },
  "commands": {
    "wxt:reload-extension": {
      "description": "Reload the extension during development",
      "suggested_key": {
        "default": "Alt+R"
      }
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Default Popup Title",
    "default_popup": "popup.html"
  },
  "options_ui": {
    "page": "options.html"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval' http://localhost:3000; object-src 'self';",
    "sandbox": "script-src 'self' 'unsafe-inline' 'unsafe-eval' http://localhost:3000; sandbox allow-scripts allow-forms allow-popups allow-modals; child-src 'self';"
  }
}